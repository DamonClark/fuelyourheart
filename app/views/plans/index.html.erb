<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">Generate Your Training Plan</h1>

  <%= form_with url: "/plans", method: :post, local: true do %>
  <div class="mb-4">
    <label class="block font-medium mb-1">Goal:</label>
    <%= select_tag :goal, options_for_select([['Hyrox', 'hyrox']]), class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <label class="block font-medium mb-1">Level:</label>
    <%= select_tag :level, options_for_select([['Beginner', 'beginner'], ['Intermediate', 'intermediate']]), class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-6">
    <label class="block font-medium mb-1">Days per Week:</label>
    <%= select_tag :days, options_for_select((3..5).to_a), class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <%= submit_tag "Generate Plan", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600 transition" %>
  <% end %>
</div>